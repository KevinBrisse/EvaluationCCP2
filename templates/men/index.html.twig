{% extends 'base.admin.html.twig' %}

{% block title %}Men index{% endblock %}

{% block body %}
    <h1>Men index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Soustitre</th>
                <th>Icone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for man in mens %}
            <tr>
                <td>{{ man.id }}</td>
                <td>{{ man.image }}</td>
                <td>{{ man.titre }}</td>
                <td>{{ man.description }}</td>
                <td>{{ man.soustitre }}</td>
                <td>{{ man.icone }}</td>
                <td>
                    <a href="{{ path('men_show', {'id': man.id}) }}">show</a>
                    <a href="{{ path('men_edit', {'id': man.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('men_new') }}">Create new</a>
{% endblock %}
